# Most used commands
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Neovim
alias vim='nvim'

# Git
alias ga='git add .'
alias gp='git push'
alias gs='git status'
alias gcm='git commit -m'
alias gca='git commit -am'
alias gco='git checkout'
alias gd='git diff'
alias glpretty='git log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short'

# Tmux
alias t='tmux'
alias killt='tmux kill-server'

# Cwd
alias cls='clear'
alias dotfiles='cd ~/Code/dotfiles/'
alias dev='cd ~/Code/'
alias dev-node="dev && find . -name "node_modules" -type d -prune -print | xargs du -chs"
alias dev-clean-node="dev && find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \;"

# Fzf
alias preview='fzf --preview "cat {}"'

# Brew
alias bu='brew update && brew upgrade && brew cleanup'

# Others
