# Most used commands
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Neovim
alias vim='nvim'

# Git
alias ga='git add .'
alias gp='git push'
alias gpm='git push origin master'
alias gs='git status'
alias gcm='git commit -m'
alias gca='git commit -am'
alias gco='git checkout'
alias gd='git diff'
alias glpretty='git log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short'

# Tmux
alias t='tmux'
alias killt='tmux kill-server'

# Cwd
alias cls='clear'
alias dotfiles='cd ~/Code/dotfiles/'
alias dev='cd ~/Code/'

# Fzf
alias preview='fzf --preview "cat {}"'

# Prettier and Husky
alias lintstaged='npm install prettier --save-dev --save-exact && npm install lint-staged husky --save-dev'

# Npm
alias npm-check='npx npm-check -u'
alias preinstall-postcss='npm i autoprefixer css-mqpacker cssnano npm-run-all postcss-cli postcss-each postcss-import postcss-nested postcss-preset-env tailwindcss --save-dev'

# Brew
alias bu='brew update && brew upgrade && brew cleanup'
